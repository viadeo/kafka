#!/bin/sh
set -e

case "$1" in
    remove)
        # Remove logs
        rm -rf /var/log/kafka
    ;;

    purge)
        # Remove service
        update-rc.d kafka remove >/dev/null || true

        # Remove logs and data
        rm -rf /var/log/kafka

        # Remove user/group
        deluser kafka || true
        delgroup kafka || true
    ;;

    upgrade|failed-upgrade|abort-install|abort-upgrade|disappear)
        # Nothing to do here
    ;;

    *)
        echo "$0 called with unknown argument \`$1'" >&2
        exit 1
    ;;
esac